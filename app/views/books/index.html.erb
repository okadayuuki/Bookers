<header>
	<h1 class="title"><%= link_to "Books",url:'/top'%></h1>
</header>
<body>
	
		<table class="box">
				<tr>
					<th class="list-title">Title</th>
					<th class="list-body">body</th>
					<th class="list-link"></th>
				</tr>
				<% @books.each do |book|%>
				<tr>
					<td class="book-title"><%= book.title %></td>
					<td claas="book-body"><%= book.body %></td>
					<td class="link">
						<%= link_to "Show",show_path(book.id) %>
                        <%= link_to "Edit",edit_path(book.id)%>
                        <%= link_to "Destroy",destroy_path(book.id),method: :delete %>
                    </td>
				</tr>
				<% end %>
		</table>
	
</body>
<footer>
	<h2>New Book</h2>
	<%= form_for(@book,url:'/books') do |f| %>
	
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit'Create Book'%>
	<%= render 'layouts/error_messages', model:f.object %>

<% end %>

</footer>






