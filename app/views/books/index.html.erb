<h1>Books</h1>
<%= @books.each do |book| %>
<h3>Title</h3>
 <%= @book.title %>
<h3>Body</h3>
 <%= @book.body %>
<% end %>
<%= link_to "Show",book_path(:id) %>
<%= link_to "Edit",edit_book_path(:id)%>
<%= link_to "Destroy",book_path(:id),method: :delete %>


<h1>New book</h1>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit'Create Book'%>
<% end %>

