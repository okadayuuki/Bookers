<header>
	<h1 class="title">Books</h1>
</header>
<body>
	
		<table class="box">
				<tr>
					<th class="list-title">Title</th>
					<th class="list-body">body</th>
					<th class="list-link" colspan="3"></th>
				</tr>
				<% @books.each do |book|%>
				<tr>
					<td class="book-title"><%= book.title %></td>
					<td claas="book-body"><%= book.body %></td>
						<td><%= link_to "Show", book_path(book) %></td>
                        <td><%= link_to "Edit", edit_book_path(book)%></td>
                        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
				</tr>
				<% end %>
		</table>
	
</body>
<footer>
	<h2>New Book</h2>
	<%= form_for(@book,url:'/books') do |f| %>
	<%= render 'layouts/error_messages', model:f.object %>
	</div>
	
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>


	<%= f.submit'Create Book'%>
	

<% end %>

</footer>






